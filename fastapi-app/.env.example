# FastAPI Environment Configuration
# ================================

# Application Settings
APP_NAME="FHIR Clinical Records API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT="development"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# Database Configuration (PostgreSQL + Citus)
# Coordinator (Master)
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="clinical_records"
DB_USER="postgres"
DB_PASSWORD="your_password_here"

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Citus Specific Configuration
CITUS_COORDINATOR_HOST="localhost"
CITUS_COORDINATOR_PORT=5432
CITUS_WORKER_HOSTS="localhost:5433,localhost:5434"

# Security (for future OAuth2/JWT implementation)
SECRET_KEY="your-super-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="json"

# API Configuration
API_V1_PREFIX="/api/v1"
MAX_PAGE_SIZE=100
DEFAULT_PAGE_SIZE=20

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
CORS_CREDENTIALS=true